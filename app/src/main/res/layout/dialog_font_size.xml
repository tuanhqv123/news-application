<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ArticleDetailActivity">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Font Size"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Font Size Options -->
    <RadioGroup
        android:id="@+id/fontSizeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/smallFontRadioButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Small"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/mediumFontRadioButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Medium"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/largeFontRadioButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Large"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/extraLargeFontRadioButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Extra Large"
            android:textSize="20sp" />

    </RadioGroup>

    <!-- Preview Text -->
    <TextView
        android:id="@+id/previewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:text="This is preview text to show how the font size will appear."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetFontButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Reset"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/applyFontButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="#0866FF"
            android:text="Apply"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>