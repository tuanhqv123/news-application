<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/audioMiniPlayerBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <!-- Audio Mini Player Bar -->
    <LinearLayout
        android:id="@+id/audioMiniPlayerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mini_player_background"
        android:elevation="12dp"
        android:visibility="gone"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/audioMiniPlayPause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play_circle"
                android:contentDescription="Play/Pause"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/audioMiniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audio Title"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/audioMiniCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp" />

                    <SeekBar
                        android:id="@+id/audioMiniSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/audioMiniDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/audioMiniClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Close"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation Container - Updated to match Figma design exactly -->
    <LinearLayout
        android:id="@+id/bottomNavigationContainer"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:background="#F39E3A"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- Home Item (Selected) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/homeNavItem">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home_filled"
                app:tint="#FFFFFF"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Explore Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/exploreNavItem">

            <ImageView
                android:id="@+id/exploreIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_explore_outline"
                app:tint="#FFFFFF"
                android:alpha="0.5"
                android:contentDescription="Explore" />

            <TextView
                android:id="@+id/exploreText"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="5dp"
                android:text="Explore"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Saved Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/savedNavItem">

            <ImageView
                android:id="@+id/savedIcon"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bookmark_outline"
                app:tint="#FFFFFF"
                android:alpha="0.5"
                android:contentDescription="Saved" />

            <TextView
                android:id="@+id/savedText"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="5dp"
                android:text="Saved"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Profile Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/profileNavItem">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_profile_outline"
                app:tint="#FFFFFF"
                android:alpha="0.5"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.5"
                android:fontFamily="sans-serif" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>