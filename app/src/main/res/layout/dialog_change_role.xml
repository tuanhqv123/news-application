<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/white_rounded_background">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change User Role"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select new role:"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:id="@+id/roleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin - Full access to all features"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author - Can create and manage articles"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioReader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reader - Can only read articles"
            android:textSize="16sp"
            android:padding="12dp"
            android:checked="true" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="#666666"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:backgroundTint="#F39E3A" />

    </LinearLayout>

</LinearLayout>
