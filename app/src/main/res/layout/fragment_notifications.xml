<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_mob"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <!-- Profile Header -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="162dp"
            android:layout_marginTop="74dp"
            android:fontFamily="Montserrat"
            android:textStyle="bold"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="429dp"
            android:fontFamily="Montserrat"
            android:textStyle="bold"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Login Button for logged out state -->
        <LinearLayout
            android:id="@+id/loginButtonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/logout_button_background"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileTitle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/avatar_background"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login / Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- User Avatar -->
        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/avatar_background"
            android:padding="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileTitle" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginTop="263dp"
            android:fontFamily="Montserrat"
            android:textStyle="bold"
            android:text="Mia Luna"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileTitle" />

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="143dp"
            android:layout_marginTop="288dp"
            android:fontFamily="Lato"
            android:text="mialuna@email.com"
            android:textColor="#969696"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userName" />

        <!-- Stats Section -->
        <LinearLayout
            android:id="@+id/statsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="327dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userEmail">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#F39E3A"
                android:padding="14dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/articlesReadCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:textStyle="bold"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:text="Interesting"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#F39E3A"
                android:padding="14dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/bookmarksCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:textStyle="bold"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:text="Saved"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#F39E3A"
                android:padding="14dp">

                <TextView
                    android:id="@+id/followingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:textStyle="bold"
                    android:text="12"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Montserrat"
                    android:text="Following"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Settings Menu -->
        <LinearLayout
            android:id="@+id/settingsMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="499dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsSection">

            <!-- Notifications Center -->
            <TextView
                android:id="@+id/notificationSettings"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:paddingStart="52dp"
                android:paddingEnd="16dp"
                android:fontFamily="Lato"
                android:textStyle="bold"
                android:text="Notifications Center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Change Password -->
            <TextView
                android:id="@+id/accountSettings"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="134dp"
                android:gravity="center_vertical"
                android:paddingStart="52dp"
                android:paddingEnd="16dp"
                android:fontFamily="Lato"
                android:textStyle="bold"
                android:text="Change Password"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Language -->
            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="617dp"
                android:fontFamily="Lato"
                android:textStyle="bold"
                android:text="Language "
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- FAQs -->
            <TextView
                android:id="@+id/faqSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="677dp"
                android:fontFamily="Lato"
                android:textStyle="bold"
                android:text="FAQs"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Logout Button -->
            <TextView
                android:id="@+id/logoutButton"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="776dp"
                android:gravity="center"
                android:background="@drawable/logout_button_background"
                android:fontFamily="Lato"
                android:textStyle="bold"
                android:text="Log Out"
                android:textColor="#E42121"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>